$color-1 = #343434
$color-2 = #51b5c5

.profile__main
    display flex
    align-items center
    justify-content center
    height 100%

.pr__div__data__user
    display flex
    flex-direction column
    align-items center
    padding 20px 0
    width 300px
    background-color $color-1
    justify-content center
    border-radius 10px

.pr__login__form
    flex-direction column

.pr__data__user__div
    +.pr__data__user__div
        margin-top 25px

.pr__password__div
    margin-top 15px

.pr__data__user__buttons
    width 180px
    background-color $color-1
    color silver
    border none
    border-bottom 2px solid $color-2
    text-align center
    font-size 20px
    outline none

.pr__sign__in__div
    margin-top 30px

.pr__change__img__link,
.pr__link__exit
    color $color-2
    font-size 18px

.pr__sign__in__button
    width 180px
    padding 0px
    font-size 18px
    margin-top 20px
    background-color $color-2
    border none
    color $color-1

.pr__change__data__buttons
    width 180px
    padding 0px
    font-size 18px
    margin-top 20px
    background-color $color-2
    border none
    color $color-1

.pr__div__user__avatar
    margin-bottom 10px
    width 100px
    height 100px
    border-radius 10px
    display flex
    background-color $color-1

.pr__img__user__avatar
    height 100px
    width 100px
    border-radius 50%
    text-align center
    line-height 6em
    color silver
